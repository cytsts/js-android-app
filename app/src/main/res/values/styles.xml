<resources>

    <!-- Default Widget Style Style -->
    <style name="Widget.JasperMobile.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:fontFamily">?fontTypePrimary</item>
    </style>

    <style name="Widget.JasperMobile.TextView.List.Title" parent="android:Widget.Holo.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/list_label_grey</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.JasperMobile.TextView.List.SubTitle" parent="android:Widget.Holo.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_label_light_grey</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.JasperMobile.TextView.Grid.Title" parent="android:Widget.Holo.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_label_grey</item>
        <item name="android:lines">2</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.JasperMobile.TextView.Info" parent="Widget.JasperMobile.TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.JasperMobile.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">?fontTypePrimary</item>
    </style>

    <style name="Widget.JasperMobile.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:fontFamily">?fontTypePrimary</item>
        <item name="android:popupBackground">@drawable/bg_popup</item>
    </style>

    <style name="Widget.JasperMobile.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">?fontTypePrimary</item>
    </style>

    <style name="Widget.JasperMobile.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-6dp</item>
    </style>

    <style name="Widget.JasperMobile.CheckBox" parent="android:Widget.Holo.CompoundButton.CheckBox">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.JasperMobile.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/js_light_gray</item>
        <item name="titleTextStyle">@style/TextAppearance.Widget.JasperMobile.ActionMode.Title</item>
    </style>

    <style name="TextAppearance.Widget.JasperMobile.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:fontFamily">?fontTypePrimary</item>
    </style>

    <style name="Widget.JasperMobile.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.JasperMobile.Toolbar.Title
        </item>
        <item name="android:background">@color/js_gray</item>
        <item name="popupTheme">@style/Theme.JasperMobile.ThemeOverlay</item>
    </style>

    <style name="TextAppearance.Widget.JasperMobile.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">?fontTypePrimary</item>
    </style>

    <style name="Theme.JasperMobile.ThemeOverlay" parent="Theme.AppCompat">
        <item name="android:colorBackground">@color/js_popup_window</item>
    </style>

    <!--Add account page-->

    <style name="Widget.JasperMobile.CardView.Auth" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@null</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.JasperMobile.CardView.Auth.Container">
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:layout_marginRight">-4dp</item>
    </style>

    <style name="Widget.JasperMobile.EditText.AddAccount">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/im_login_edit</item>
        <item name="android:ems">10</item>
    </style>

    <!-- Input Controls -->
    <style name="inputControl" />

    <style name="inputControl.layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="inputControl.label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/js_dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inputControl.errorText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!-- Boolean -->
    <style name="inputControl.boolean" />

    <style name="inputControl.boolean.checkBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/js_dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Single Value -->
    <style name="inputControl.singleValue" />

    <style name="inputControl.singleValue.editText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Report Options Layout -->
    <style name="reportOptions" />

    <style name="reportOptions.container" />

    <style name="reportOptions.container.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="reportOptions.container.inputControls" />

    <style name="reportOptions.container.inputControls.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Report HTML Viewer Layout -->
    <style name="htmlViewer" />

    <style name="htmlViewer.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="htmlViewer.webView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Save Report Layout -->
    <style name="saveReport" />

    <style name="saveReport.reportName" />

    <style name="saveReport.reportName.label" parent="inputControl.label" />

    <style name="saveReport.reportName.input" parent="inputControl.singleValue.editText" />

    <style name="saveReport.reportName.error" parent="inputControl.errorText" />

    <style name="saveReport.outputFormat" />

    <style name="saveReport.outputFormat.label" parent="inputControl.label" />

    <!--Add account page-->

    <style name="editTextAccount">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/im_login_edit</item>
        <item name="android:ems">10</item>
    </style>

</resources>