<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/js_light_gray"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/resourceThumbnail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:src="@drawable/ic_report_thumbnail"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <TextView
            android:id="@+id/resourceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/stopCastResource"
            android:textColor="@android:color/white"
            tools:text="Resource name"/>

        <ImageButton
            android:id="@+id/stopCastResource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_menu_stop"/>

    </RelativeLayout>

</LinearLayout>